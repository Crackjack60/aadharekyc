<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView1"
        style="@android:style/Widget.TextView"
        android:layout_width="367dp"
        android:layout_height="69dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="659dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:includeFontPadding="true"
        android:text="Welcome to e-kyc "
        android:textColor="@color/colortextfirst"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/input_mobile_number1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="218dp"
        android:layout_marginBottom="468dp"
        android:background="@drawable/backgroundbox"
        android:gravity="center"
        android:hint="Full Name as per Aadhar"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/input_mobile_number"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="141dp"
        android:layout_marginBottom="546dp"
        android:background="@drawable/backgroundbox"
        android:gravity="center"
        android:hint="Enter Aadhar Number"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/input_mobile_number3"
        android:layout_width="200dp"
        android:layout_height="45dp"

        android:layout_marginStart="106dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="378dp"
        android:background="@drawable/backgroundbox"
        android:gravity="center"
        android:hint="Date Of Birth"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="date"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/input_mobile_number4"
        android:layout_width="200dp"
        android:layout_height="45dp"

        android:layout_marginStart="105dp"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="297dp"
        android:background="@drawable/backgroundbox"
        android:gravity="center"
        android:hint="Gender"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:layout_marginBottom="188dp"
        android:background="@color/blue"
        android:text="Submit"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_face"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:layout_marginBottom="112dp"
        android:background="@color/blue"
        android:text="Face Verification"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>